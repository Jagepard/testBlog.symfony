{% extends '@Admin/layout.html.twig' %}

{% block title %}Hello MaterialsController!{% endblock %}

{% block content %}
<br>

<table class="table table-striped table-hover">
<tr>
    <td>#</td>
    <td></td>
    <td></td>
    <td><a href="{{ url('blog.materials') }}admin/material/add"><button type="button" class="btn btn-info">add</button></a></td>
</tr>

{% for material in materials %}
    <tr>
    <td><p>{{ material.id }}</p></td>
    <td>
        {% if material.image is not empty %}
            <img src="{{ url('blog.materials') }}images/thumb/{{ material.image }}" class="card-img-top" alt="{{ material.title }}">
        {% endif %}
    </td>
    <td><p>{{ material.title }}</p></td>

    <td>
    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
        <a href="{{ url('blog.materials') }}admin/material/edit/{{ material.id }}"><button type="button" class="btn btn-success">edit</button></a>
        <a href="{{ url('blog.materials') }}admin/material/delete/{{ material.id }}"><button type="button" class="btn btn-danger">delete</button></a>
    </div>
    </td>
    </tr>
{% endfor %}

</table>

    <br>
    {{ knp_pagination_render(materials) }}
{% endblock %}
