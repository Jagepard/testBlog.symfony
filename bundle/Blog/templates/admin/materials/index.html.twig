{% extends '../../../../../templates/base.html.twig' %}

{% block title %}Materials index{% endblock %}

{% block body %}
    <h1>Materials index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Text</th>
                <th>Image</th>
                <th>Status</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.id }}</td>
                <td>{{ material.title }}</td>
                <td>{{ material.slug }}</td>
                <td>{{ material.text }}</td>
                <td>{{ material.image }}</td>
                <td>{{ material.status }}</td>
                <td>{{ material.createdAt ? material.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ material.updatedAt ? material.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_materials_show', {'id': material.id}) }}">show</a>
                    <a href="{{ path('app_admin_materials_edit', {'id': material.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_materials_new') }}">Create new</a>
{% endblock %}
